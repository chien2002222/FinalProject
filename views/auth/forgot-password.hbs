<style>
    /* Định dạng cho body và form */
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        background-color: #f4f4f4;
    }

    form {
        width: 300px;
        padding: 20px;
        border-radius: 8px;
        background-color: #ffffff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
</style>

<form action="/auth/forgot-password" method="POST">
    <div style="margin-bottom: 15px;">
        <label for="email" style="display: block; margin-bottom: 5px;">Email:</label>
        <input 
            type="email" 
            id="email" 
            name="email" 
            required 
            style="width: 100%; padding: 8px; border-radius: 4px; border: 1px solid #ccc;"
        >
    </div>
    <div>
        <button 
            type="submit" 
            style="background-color: #007bff; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer; width: 100%;"
        >
            Reset Password
        </button>
    </div>
</form>
